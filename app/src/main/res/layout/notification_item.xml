<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="12dp"
    android:background="?attr/selectableItemBackground"
    android:gravity="center_vertical">

    <!-- User profile image or avatar -->
    <ImageView
        android:id="@+id/profileImage"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:contentDescription="@string/profile"
        android:src="@drawable/profile_avatar"
        android:scaleType="centerCrop"
        android:layout_marginEnd="12dp"
        android:background="@color/white" /> <!-- Circle background can be custom -->

    <!-- Texts: Title and Subtitle -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <!-- Title (e.g., Super Offer) -->
        <TextView
            android:id="@+id/notification_Title"
            android:layout_width="wrap_content"
            android:fontFamily="@font/urbanist_bold"
            android:layout_height="wrap_content"
            android:text="@string/notification_header"
            android:textStyle="bold"
            android:textSize="16sp" />

        <!-- Subtitle (e.g., Get 60% off in our first booking) -->
        <TextView
            android:id="@+id/subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/urbanist_lightitalic"
            android:text="@string/example_notification"
            android:textColor="#546E7A"
            android:textSize="14sp" />
    </LinearLayout>

    <!-- Timestamp (e.g., Sun, 12:40 PM) -->
    <TextView
        android:id="@+id/timestamp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/urbanist_light"
        android:text="@string/notification_time"
        android:textColor="#546E7A"
        android:textSize="12sp" />
</LinearLayout>
